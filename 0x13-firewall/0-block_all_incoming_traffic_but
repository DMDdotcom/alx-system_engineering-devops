sudo ufw fefault deny incoming connections
#Default incomming policy changed to 'deny' (be sure to update your rules accordingly)

sudo ufw default allow outgoing connections
#Default outgoing policy changed to 'deny' (be sure to update your rules accordingly)
sudo ufw allow 22/tcp
#Rules updated
#Rules updated (v6)
sudo ufw allow  443/tcp
#Rules updated
#Rules updated (v6)
sudo ufw allow 80/tcp
#Rules updated
#Rules updated (v6)
sudo ufw enable
